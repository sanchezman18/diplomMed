@model Cart
@using diplomMed.Infrastructure
<div class="">
    @if (Model.Lines.Count()>0)
    {
        <small class="navbar-text navbar-btn">
            <b>Your cart:</b>
            @Model.Lines.Sum(x => x.Quentity) item(s)
            @Model.ComputeTotalValue().ToString("c")
        </small>
    }
    <a class="btn btn-sm btn-secondary navbar-btn" 
       asp-controller="Cart" asp-action="Index"
       asp-route-retutnURL="@ViewContext.HttpContext.Request.PathAndQuery()">
        <i class="fa fa-shopping-cart"></i>
    </a>

</div>
